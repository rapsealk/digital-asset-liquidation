<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel_my_assets"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:fillColor="@color/colorPrimary"
            app:pageColor="@color/colorAccent"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="1dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_register"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="@id/carousel_my_assets"
            app:layout_constraintBottom_toBottomOf="@id/carousel_my_assets"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:elevation="4dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_icons8_search_48"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/block_screen"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="@id/carousel_my_assets"
            app:layout_constraintBottom_toBottomOf="@id/carousel_my_assets"
            app:layout_constraintStart_toStartOf="@id/carousel_my_assets"
            app:layout_constraintEnd_toEndOf="@id/carousel_my_assets"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iv_alert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorAccent"
                android:alpha="0.7"
                android:clickable="true"
                android:focusable="true"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="로그인"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"/>

        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/carousel_my_assets"
            app:layout_constraintBottom_toTopOf="@id/carousel_new_assets"
            android:background="@color/colorPrimaryDark"
            android:text="@string/btn_history" />

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel_new_assets"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_history"
            app:layout_constraintBottom_toBottomOf="parent"
            app:fillColor="@color/colorPrimary"
            app:pageColor="@color/colorAccent"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="1dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="@id/carousel_new_assets"
            app:layout_constraintBottom_toBottomOf="@id/carousel_new_assets"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:elevation="4dp"
            android:backgroundTintMode="@color/colorPrimary"
            android:src="@drawable/ic_icons8_search_48"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:indeterminate="true"
            android:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>

    <!-- Navigation Drawer -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/colorAccent"/>

</android.support.v4.widget.DrawerLayout>